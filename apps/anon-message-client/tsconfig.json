{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "outDir": "dist",
      "lib": ["ES2020"],
      "target": "ES2020",
      "isolatedModules": false,
      "noEmit": false
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../packages/pcd/eddsa-ticket-pcd"
    },
    {
      "path": "../../packages/lib/passport-interface"
    },
    {
      "path": "../../packages/lib/pcd-types"
    },
    {
      "path": "../../packages/pcd/semaphore-identity-pcd"
    },
    {
      "path": "../../packages/lib/util"
    },
    {
      "path": "../../packages/pcd/zk-eddsa-event-ticket-pcd"
    }
  ]
}
