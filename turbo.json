{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {
      "outputs": []
    }
  },
  "globalEnv": [
    "DATABASE_USERNAME",
    "DATABASE_PASSWORD",
    "DATABASE_HOST",
    "DATABASE_DB_NAME",
    "DATABASE_SSL",
    "PASSPORT_SERVER_URL",
    "NODE_ENV",
    "PORT",
    "HONEYCOMB_API_KEY",
    "MAILGUN_API_KEY"
  ]
}
