{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Typescript Library",
  "extends": "./base.json",
  "compilerOptions": {
    // Needed for TypeScript to be able to build a model of the entire
    // project out of several packages.
    // See https://www.typescriptlang.org/tsconfig#composite
    "composite": true,
    "outDir": "dist",
    "declarationDir": "dist/types",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "target": "ES2020",
    "resolveJsonModule": true
  }
}
