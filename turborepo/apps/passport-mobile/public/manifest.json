{
  "manifest_version": 3,
  "name": "Zupass",
  "version": "1.0",
  "description": "Zuzalu Passport",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": ["webRequest"],
  "action": {
    "default_icon": "icons/icon.png",
    "default_title": "Zupass",
    "default_popup": "index.html"
  },
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self'; worker-src blob: data:"
  }
}
