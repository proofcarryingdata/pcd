{
  "name": "circuits",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@electron-labs/sha512": "^1.0.4"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "circomlib": "^2.0.3",
    "circomlibjs": "^0.1.2",
    "hardhat": "^2.9.1"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "circom:dev": "hardhat circom --deterministic --debug --verbose",
    "circom:prod": "hardhat circom --verbose",
    "test": "hardhat test",
    "compile": "mkdir -p ./build && circom ./circuits/main.circom --r1cs --wasm --sym --verbose -o build",
    "setup": "mkdir -p ./build && NODE_OPTIONS=--max_old_space_size=16384 snarkjs groth16 setup ./build/main.r1cs ../pot22_final.ptau ./build/circuit_final.zkey",
    "verification-key": "NODE_OPTIONS=--max_old_space_size=16384 snarkjs zkey export verificationkey ./build/circuit_final.zkey ./build/verification_key.json",
    "build": "npm run compile && npm run setup && npm run verification-key"
  }
}
